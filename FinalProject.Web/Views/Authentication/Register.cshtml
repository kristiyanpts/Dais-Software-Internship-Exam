@model FinalProject.Web.Models.ViewModels.Authentication.Register.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">Създаване на акаунт</h3>
                </div>
                <div class="card-body p-5">
                    <div class="text-center mb-2">
                        <p class="text-muted">Моля, попълнете вашите данни за регистрация</p>
                    </div>

                    <form asp-controller="Authentication" asp-action="Register" method="post">
                        <div class="form-floating mb-4">
                            <input asp-for="Username" type="text" class="form-control" id="username"
                                placeholder="Потребителско име" asp-for="Username" value="@Model.Username">
                            <label asp-for="Username">Потребителско име</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="FullName" type="text" class="form-control" id="fullName"
                                placeholder="Пълно име" asp-for="FullName" value="@Model.FullName">
                            <label asp-for="FullName">Пълно име</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" type="password" class="form-control" id="password"
                                placeholder="Парола" asp-for="Password" value="@Model.Password">
                            <label asp-for="Password">Парола</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword"
                                placeholder="Потвърдете паролата" asp-for="ConfirmPassword"
                                value="@Model.ConfirmPassword">
                            <label asp-for="ConfirmPassword">Потвърдете паролата</label>
                        </div>

                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="text-danger mb-4">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div class="alert alert-danger py-2 mb-2" role="alert">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                                        <path fill="currentColor" fill-rule="evenodd"
                                            d="M5.312 10.762C8.23 5.587 9.689 3 12 3s3.77 2.587 6.688 7.762l.364.644c2.425 4.3 3.638 6.45 2.542 8.022S17.786 21 12.364 21h-.728c-5.422 0-8.134 0-9.23-1.572s.117-3.722 2.542-8.022zM12 7.25a.75.75 0 0 1 .75.75v5a.75.75 0 0 1-1.5 0V8a.75.75 0 0 1 .75-.75M12 17a1 1 0 1 0 0-2a1 1 0 0 0 0 2"
                                            clip-rule="evenodd" />
                                    </svg>
                                    <span class="ms-2">
                                        @error.ErrorMessage
                                    </span>
                                </div>
                            }
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Регистрация
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0">
                                <span class="text-muted">Вече имате акаунт?</span>
                                <a asp-controller="Authentication" asp-action="Login"
                                    class="text-primary fw-bold text-decoration-none">Влезте</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}