@model FinalProject.Web.Models.ViewModels.Home.Index.IndexHomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-gradient mb-4">Your Accounts</h1>
            <p class="lead text-muted">Manage your accounts and view your balances</p>
        </div>
    </div>

    <div class="row">
        @if (!Model.Accounts.Any())
        {
            <div class="col-12">
                <div class="card shadow-soft">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-wallet fa-3x text-muted mb-3"></i>
                        <h3 class="text-muted">No Accounts Found</h3>
                        <p class="text-muted">You don't have any accounts associated with your profile.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            @foreach (var account in Model.Accounts)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-soft h-100">
                        <div class="card-header text-white">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-university me-2"></i>
                                Account Details
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted">Account Number:</span>
                                <span class="fw-bold">@account.AccountNumber</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Balance:</span>
                                <span class="fw-bold text-primary">@account.Balance.ToString("C")</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Create", "Payment", new { accountId = account.Id })"
                                    class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Make Payment
                                </a>
                                <a href="@Url.Action("Index", "Payment", new { accountId = account.Id })"
                                    class="btn btn-outline-primary">
                                    <i class="fas fa-history me-2"></i>
                                    View Transactions
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <style>
        .text-gradient {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12) !important;
        }

        .btn-outline-primary {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

        .btn-outline-primary:hover {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-color: transparent;
        }
    </style>
}
